<%= form_for(@match, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @match.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@match.errors.count, "error") %> prohibited this match from being saved:</h4>

      <ul>
      <% @match.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :match_datetime, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :match_datetime, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :match_loc_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :match_loc_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :match_note, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :match_note, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :match_opp, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :match_opp, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :match_outcome, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :match_outcome, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :match_score, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :match_score, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :match_loc_address, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :match_loc_address, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :created_at, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :created_at, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :updated_at, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :updated_at, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
