<div class="page-header">
  <%= link_to new_player_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Player
  <% end %>
  <h1>HP Players List</h1>
</div>

<div class="table-responsive">
  <table class="table-hover">
    <thead>
      <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>User name</th>
            <th>Password</th>
            <th>Photo</th>
            <th>Team name</th>
            <th>Role</th>
            <th>Gender</th>
            <th>Age category</th>
            <th>Skill level</th>
            <th>Record ind</th>
            <th>Record team</th>
            <th>Phone num</th>
            <th>Email</th>
            <th>Day pref1</th>
            <th>Time pref1</th>
            <th>Time pref2</th>
            <th>Remember token</th>
            <th>Created at</th>
            <th>Updated at</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @players) do |player| %>
            <td><%= player.first_name %></td>
            <td><%= player.last_name %></td>
            <td><%= player.user_name %></td>
            <td><%= player.password %></td>
            <td><%= player.photo %></td>
            <td><%= player.team_name %></td>
            <td><%= player.role %></td>
            <td><%= player.gender %></td>
            <td><%= player.age_category %></td>
            <td><%= player.skill_level %></td>
            <td><%= player.record_ind %></td>
            <td><%= player.record_team %></td>
            <td><%= player.phone_num %></td>
            <td><%= player.email %></td>
            <td><%= player.day_pref1 %></td>
            <td><%= player.time_pref1 %></td>
            <td><%= player.time_pref2 %></td>
            <td><%= player.remember_token %></td>
            <td><%= player.created_at %></td>
            <td><%= player.updated_at %></td>
            <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>

<h4>Import Players</h4>
<%= form_tag import_players_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import" %>
<% end %>

</div>





