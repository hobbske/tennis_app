<div class="page-header">
  <%= link_to players_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_player_path(@player), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <p id="notice"><%= notice %></p>
  <h3>Profile: <strong><%= @player.first_name %> <%= @player.last_name %></strong></h3>
</div>

<dl class="dl-horizontal">

  <dt></dt>
  <dd><%= image_tag @player.photo, :class => 'portrait' %></dd>

  <dt>First name:</dt>
  <dd><%= @player.first_name %></dd>

  <dt>Last name:</dt>
  <dd><%= @player.last_name %></dd>

  <dt>Phone:</dt>
  <dd><%= @player.phone_num %></dd>

  <dt>Email:</dt>
  <dd><%= @player.email %></dd>

  <dt>1st Preference:</dt>
  <dd><%= @player.day_pref1 %> (<%= @player.time_pref1 %>)</dd>

  <dt>2nd Preference:</dt>
  <dd><%= @player.day_pref2 %> (<%= @player.time_pref2 %>)</dd>

  <dt>Team name:</dt>
  <dd><%= @player.team_name %></dd>

  <dt>Role:</dt>
  <dd><%= @player.role %></dd>

  <dt>Gender:</dt>
  <dd><%= @player.gender %></dd>

  <dt>Age category:</dt>
  <dd><%= @player.age_category %></dd>

  <dt>Skill level:</dt>
  <dd><%= @player.skill_level %></dd>

  <dt>Record ind:</dt>
  <dd><%= @player.record_ind %></dd>

  <dt>Record team:</dt>
  <dd><%= @player.record_team %></dd>



  <dt>Date Created:</dt>
  <dd><%= @player.created_at %></dd>

  <dt>Last Modified:</dt>
  <dd><%= @player.updated_at %></dd>

  <br>

  <dt><strong></strong></dt>
  <dd><span id="destroy_player_profile"><%= link_to 'Delete Profile', @player, method: :delete, data: { confirm: 'Are you sure? This cannot be undone.' } %></span></dd>

</dl>
