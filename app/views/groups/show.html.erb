
<div class="page-header">
  <%= link_to groups_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_group_path(@group), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <p id="notice"><%= notice %></p>
  <h3> Profile: <strong><%= @group_name %></strong></h3>
</div>

<dl class="dl-horizontal">


  <dt>Group Name:</dt>
  <dd><%= @group.group_name %></dd>

  <dt>Gender:</dt>
  <dd><%= @group.gender %></dd>

  <dt>Skill Level:</dt>
  <dd><%= @group.skill_level %></dd>

  <dt>Age Category:</dt>
  <dd><%= @group.age_category %></dd>

  <dt>Maximum Roster Size:</dt>
  <dd><%= @group.roster_max %></dd>

  <br>

  <dt></dt>
  <dd><span id="destroy_player_profile"><%= link_to 'Delete Group', @group, method: :delete, data: { confirm: 'Are you sure? This cannot be undone.' } %></span></dd>

</dl>
