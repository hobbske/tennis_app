
<%= form_for(@group, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @group.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h4>

      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :group_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :group_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Gender", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select(:gender, options_for_select([["Female", "Female"], ["Male", "Male"]]), {include_blank: true}, class: "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :age_category, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.select(:age_category, options_for_select([["Adult", "Adult"], ["Senior", "Senior"], ["Under 18", "Under 18"]]), {include_blank: true}, class: "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :skill_level, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :skill_level, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Max Roster Size", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :roster_max, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>