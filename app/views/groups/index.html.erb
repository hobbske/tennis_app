<div class="page-header">
  <%= link_to new_group_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Group
  <% end %>
  <h3>Groups</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Group name</th>
        <th>Season</th>
        <th>Year</th>
        <th>Gender</th>
        <th>Skill level</th>
        <th>Age category</th>
        <th>Roster max</th>
      </tr>
  </thead>

    <tbody>
      <%= content_tag_for(:tr, @groups) do |group| %>
          <td><%= group.group_name %></td>
          <td><%= group.season %></td>
          <td><%= group.year %></td>
          <td><%= group.gender %></td>
          <td><%= group.skill_level %></td>
          <td><%= group.age_category %></td>
          <td><%= group.roster_max %></td>
          <td><%= link_to 'Show', group %></td>
          <!-- only allow editting and deleting by the user that created the entry -->
          <% if group.user == current_user %>
            <td><%= link_to 'Edit', edit_group_path(group) %></td>
            <td><%= link_to 'Delete', group, method: :delete, data: { confirm: 'Are you sure you want to delete this record?' } %></td>
          <% end %>
      <% end %>
    </tbody>
  </table>
</div>